//- template page
- var css = "css/";
- var js = "js/";
- var vendor = "vendor/";
- var i = "img/";

block local-vars

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")

		title
			block title
		
		<link href="https://fonts.googleapis.com/css?family=Lato:400,700|Noto+Sans:400,700" rel="stylesheet">
		
		//- link(rel="stylesheet" href=vendor + "bootstrap/css/bootstrap.min.css")
		//- link(rel="stylesheet" href=vendor + "font-awesome/css/font-awesome.min.css")
		block styles

		link(rel="stylesheet", href=vendor + "malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.min.css")
		link(rel="stylesheet", href=vendor + "jquery.selectric/selectric.min.css")
		link(rel="stylesheet", href=css + "main.css")
			
	body
		.wrapper
			include blocks/sidebar/sidebar
			.wrapper__right
				include blocks/header/header

				block content

				block after-content

				include blocks/footer/footer

		script(src=vendor + "jquery.min.js")
		script(src=vendor + "malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js")
		script(src=vendor + "jquery.selectric/jquery.selectric.min.js")
		//- script(src=vendor + "tether/js/tether.min.js")
		//- script(src=vendor + "bootstrap/js/bootstrap.min.js")
		block scripts
		script(src=js + "js.js")