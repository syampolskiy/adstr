extends ../template

block scripts
    script(src=jsnoConcate + "walletadv.js")


block content
    main.content
        .scrollable.js-init-scrollable
            .box
                .page-title
                    span.title Wallet
                .chart-area
                    .chart-info
                        form#wallet-chart
                            .inputs
                                .img-box
                                    img(src='img/User Icon.png')
                                input.username-i(type='text' name='' placeholder = "Stephen Amell"  readonly)

                                .balance-box Balance
                                input.balance-i(type='text' name='' placeholder = "38.5" readonly)

                                .select-box
                                    select
                                        option USD
                                        option EUR
                                    .coast-p-m 5$ min
                                .amount-box
                                    input.amount-i(type='text' name='' placeholder = "Amount" readonly)
                            .p-m-mob 5$ min
                            .radiobtn
                                .radio-box
                                    label
                                        input.radio(type='radio', name='pay' checked )
                                        span.radio-custom
                                        span.label.pay WebMoney
                                .radio-box
                                    label
                                        input.radio(type='radio', name='pay')
                                        span.radio-custom
                                        span.label.pay Paypal
                                .radio-box
                                    label
                                        input.radio(type='radio', name='pay')
                                        span.radio-custom
                                        span.label.pay Skrill
                            input(type='submit' value="Deposit")

                    .chart-container
                        .chart-place
                            span.name-of-chart Total Outcome

                            canvas#wallet

