extends ../template
block scripts
    script(src=jsnoConcate +  "streamers-time.js")
    script(src=jsnoConcate +  "streamer-views-followers.js")
    script(src=jsnoConcate +  "streamers-incomes.js")

block content
    main.content
        .box
            #tabs
                ul
                    li
                        a(href='#tabs-1') Time
                    li
                        a(href='#tabs-2') Views, Followers
                    li
                        a(href='#tabs-3') Income
                #tabs-1
                    .over
                    .streamer-time-block
                        .filters-block
                            .datapicker-block
                                input#startDayTime.start-day(name='startDateTime', readonly='')
                                input#endDayTime.end-day(name='endDateTime', readonly='')
                                #date_range_time
                            dl.timeChartIdsMenu.dropdown
                                dt
                                    a(href='#')
                                        span.hida Select
                                        p.timeChart
                                dd
                                    .timeChart_select
                                        ul
                                            li
                                                input#channel_228701.banner(type='checkbox', value='channel 1')
                                                | channel 1
                                            li
                                                input#channel_228702.banner(type='checkbox', value='channel 2')
                                                | channel 2
                                            li
                                                input#channel_228703.banner(type='checkbox', value='channel 3')
                                                | channel 3
                                            li
                                                input#channel_2204.banner(type='checkbox', value='channel 4 ')
                                                | channel 4
                                            li
                                                input#channel_2705.banner(type='checkbox', value='channel 5')
                                                | channel 5
                                            li
                                                input#channel_2706.banner(type='checkbox', value='channel 6')
                                                | channel 6
                            .toggle-chart
                                label(for='days') Days
                                span#graphLayerTime.toggle-bg
                                    input#daysTime.time_chart(type='radio', name='toggle', value='Days', checked='')
                                    input#weeksTime.time_chart(type='radio', name='toggle', value='Weeks')
                                    span.switch
                                label(for='weeks') Weeks
                        .time-chart
                            canvas#stream-time.chart-cnvs.show
                            canvas#stream-time2.chart-cnvs
                #tabs-2
                    .streamer-followers-block
                        .filters-block
                            .datapicker-block
                                input#startDayFollowers.start-day(name='startDate', readonly='')
                                input#endDayFollowers.end-day(name='endDate', readonly='')
                                #date_range_followers
                            dl.dropdown.followersMenu
                                dt
                                    a(href='#')
                                        span.hida Select
                                        p.VFChart
                                dd
                                    .mutliSelect_followers
                                        ul
                                            li
                                                input#channel_228701.banner(type='checkbox', value='channel 1')
                                                | channel 1
                                            li
                                                input#channel_228702.banner(type='checkbox', value='channel 2')
                                                | channel 2
                                            li
                                                input#channel_228703.banner(type='checkbox', value='channel 3')
                                                | channel 3
                                            li
                                                input#channel_224.banner(type='checkbox', value='channel 4 ')
                                                | channel 4
                                            li
                                                input#channel_8705.banner(type='checkbox', value='channel 5')
                                                | channel 5
                                            li
                                                input#channel_2206.banner(type='checkbox', value='channel 6')
                                                | channel 6
                            .toggle-chart
                                label(for='ViewsC') Views
                                span#graphLayerFollowers.toggle-bg
                                    input#ViewsC.vfchart(type='radio', name='toggle', value='Views', checked='')
                                    input#FollowersC.vfchart(type='radio', name='toggle', value='Followers')
                                    span.switch
                                label(for='FollowersC') Followers
                        .followers-chart
                            canvas#stream-followers.chart-cnvs.show
                            canvas#stream-followers2.chart-cnvs
                #tabs-3
                    .streamer-incoms-block
                        .filters-block
                            .datapicker-block
                                input#startDay.start-day(name='startDate', readonly='')
                                input#endDay.end-day(name='endDate', readonly='')
                                #date_range
                            dl.dropdown
                                dt
                                    a(href='#')
                                        span.hida Select
                                        p.multiSel
                                dd
                                    .mutliSelect
                                        ul
                                            li
                                                input#channel_228701.banner(type='checkbox', value='channel 1')
                                                | channel 1
                                            li
                                                input#channel_228702.banner(type='checkbox', value='channel 2')
                                                | channel 2
                                            li
                                                input#channel_228703.banner(type='checkbox', value='channel 3')
                                                | channel 3
                                            li
                                                input#channel_228704.banner(type='checkbox', value='channel 4 ')
                                                | channel 4
                                            li
                                                input#channel_228705.banner(type='checkbox', value='channel 5')
                                                | channel 5
                                            li
                                                input#channel_228706.banner(type='checkbox', value='channel 6')
                                                | channel 6
                            .toggle-chart
                                label(for='days') Days
                                span#graphLayer.toggle-bg
                                    input#days.income_chart(type='radio', name='toggle', value='Days', checked='')
                                    input#weeks.income_chart(type='radio', name='toggle', value='Weeks')
                                    span.switch
                                label(for='weeks') Weeks
                        .income-chart
                            canvas#stream-incoms.chart-cnvs.show
                            canvas#stream-incoms2.chart-cnvs
