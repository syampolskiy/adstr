extends ../template

block content
	main.content.content--with-notify-bar.js-set-padd-top
		.scrollable.js-init-scrollable
			.box
				.box__header
					h1 Channel Ad Spaces
				.box__content
					button.btn.btn--white(type="button") Add Ad Spaces
					.spaces
						.spaces__box
							button.spaces__box-close
								i.icon-close
							table.standard-table.spaces-table.js-init-responsive-table(data-rtContainerBreakPoint="707")
								thead
									tr
										th Image
										th Name
										th Price
										th 
								tbody
									tr
										td
											.spaces__box-img
												img(src=i + "space.png", alt="")
										td
											.spaces__box-name My_banner
										td
											.spaces__box-price 0.85$
										td
											.select-wrap
												select.js-init-selectric
													option(value="Actions" data-content="Actions") Actions
													option(value="Layers" data-content="Layers") Layers
													option(value="Edit" data-content="Edit") Edit
													option(value="Remove channel" data-content="Remove channel") Remove channel
													option(value="Layout link" data-content="<div class='select-option-inner'>Layout link <span class='exclamation'>!</span></div>") Layout link
						.spaces__box
							button.spaces__box-close
								i.icon-close
							table.standard-table.spaces-table.js-init-responsive-table(data-rtContainerBreakPoint="707")
								thead
									tr
										th Image
										th Name
										th Price
										th 
								tbody
									tr
										td
