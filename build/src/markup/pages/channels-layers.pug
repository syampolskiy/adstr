extends ../template

block content
	main.content.content--with-notify-bar.js-set-padd-top
		.mfp-hide.white-popup-block.popup.confirm-popup
			| content
		.scrollable.js-init-scrollable
			.box
				.box__header
					h1 Channel Layers
				.box__content
					a.btn.btn--white(class='popup' href='#addLayer') Add Layer
					.spaces
						.spaces__box
							button.spaces__box-close
								i.icon-close
							table.standard-table.spaces-table.js-init-responsive-table(data-rtContainerBreakPoint="707")
								thead
									tr
										th Image
										th Name
										th Game
										th 
								tbody
									tr
										td
											.spaces__box-img
												img(src=i + "space.png", alt="")
										td
											.spaces__box-name My_banner
										td
											.spaces__box-price Dota 2
										td
											.select-wrap
												select.js-init-selectric
													option(value="Actions" data-content="Actions") Actions
													option(value="https://google.com.ua" data-content="Ad Spaces") Ad Spaces
													option(value="https://ru.stackoverflow.com" data-content="Edit") Edit
													option.blank(value="1" data-content="Remove Layer") Remove Layer
													option(value="Layout link" data-content="<div class='select-option-inner'>Layout link <span class='exclamation'>!</span></div>") Layout link

						.spaces__box
							button.spaces__box-close
								i.icon-close
							table.standard-table.spaces-table.js-init-responsive-table(data-rtContainerBreakPoint="707")
								thead
									tr
										th Image
										th Name
										th Game
										th 
								tbody
									tr
										td
											.spaces__box-img
												img(src=i + "space.png", alt="")
										td
											.spaces__box-name My_banner
										td
											.spaces__box-price Dota 2
										td
											.select-wrap
												select.js-init-selectric(onchange='window.location.href=this.options[this.selectedIndex].value')
													option(value="Actions" data-content="Actions") Actions
													option(value="Ad Spaces" data-content="Ad Spaces") Ad Spaces
													option(value="Edit" data-content="Edit") Edit
													option(value="Remove Layer" data-content="Remove Layer") Remove Layer
													option(value="Layout link" data-content="<div class='select-option-inner'>Layout link <span class='exclamation'>!</span></div>") Layout link
			.hidden
				#addLayer
					form#ConfirmLayer.confirm-layer-form
						span Confirm Channel
						label Layers name
						input(type='text' name='' placeholder = "My_banner")
						label Tag
						input(type='text' name='' placeholder = "dota")
						input#ImageFileData.hide-in.form-control.inputfile(name='', type='file', value='' data-multiple-caption='{count} files selected', multiple='')
						label.upload-label(for ="ImageFileData") Upload Image
						.load-img
							img(src = "img/Check Icon.png")
							p Image loaded

						.btn-block
							a(class='btn btn-modal btn-modal-blue' href='') Save
							a(class='btn btn-modal' href='') Cancel