extends ../template

block content
    main.content.js-init-scrollable
        .box
            .page-title
                span.title Wallet
            .chart-area
                .chart-info
                    form#wallet-chart
                        .inputs
                            .img-box
                                img(src='img/User Icon.png')
                            input.username(type='text' name='' placeholder = "Stephen Amell"  readonly)

                            .grey-box Balance
                            input.balance(type='text' name='' placeholder = "38.5" readonly)

                            .select-box
                                select
                                    option USD
                                    option EUR
                            input.amount(type='text' name='' placeholder = "Amount" readonly)
                        .radiobtn
                            .radio-box
                                label
                                    input.radio(type='radio', name='pay' )
                                    span.radio-custom
                                    span.label WebMoney
                            .radio-box
                                label
                                    input.radio(type='radio', name='pay')
                                    span.radio-custom
                                    span.label Paypal
                            .radio-box
                                label
                                    input.radio(type='radio', name='pay')
                                    span.radio-custom
                                    span.label Skrill
                        input(type='submit' value="Withdraw")

                chart-container
                    .chart-place
                        canvas#wallet-chart
